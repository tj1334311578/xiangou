<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_pink_fb4a89"
    android:id="@+id/mystore_head_bg"
    android:layout_height="wrap_content">
<TextView
    android:layout_alignBottom="@+id/mystore_store_headback"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mystore_head_title_tv"
    android:textSize="18sp"
    android:textColor="@color/whiteBgColor"
    android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/mystore_store_headback"
        android:layout_width="24dp"
        android:paddingTop="37dp"
        android:layout_height="61dp"
        android:paddingStart="15dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/return_icon"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="61dp"
        android:paddingTop="37dp"
        android:layout_alignTop="@+id/mystore_store_headback"
        android:src="@drawable/error1"
        android:id="@+id/mystore_head_home"
        android:layout_toEndOf="@+id/mystore_store_headback"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        />
    <ImageView
        android:layout_width="24dp"
        android:src="@drawable/message"
        android:paddingTop="37dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/mystore_head_message"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/mystore_store_headback"
        android:layout_height="wrap_content" />


</RelativeLayout>