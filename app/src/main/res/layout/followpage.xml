<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e7e7e7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/setting_head"
        android:id="@+id/followpage_head"
        />
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/followpage_tab"
        style="@style/MyTabLayoutStyle"
        android:background="@color/whiteBgColor"
        app:tabIndicatorColor="@color/nearbyTabLine"
        app:tabIndicatorHeight="2dp"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
    <View
        android:layout_marginTop="-1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="13dp"
        >
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:background="@color/whiteBgColor"
            android:id="@+id/followpage_viewpager"
            android:layout_height="wrap_content"
            ></android.support.v4.view.ViewPager>
        <Button
            android:id="@+id/cancel_follow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="81dp"
            android:paddingRight="81dp"
            android:text="取消关注"
            android:textSize="16sp"
            android:textColor="@color/white_edf2f6"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    
</LinearLayout>