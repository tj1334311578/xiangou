<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <!--待完成-->

    <com.example.administrator.xiangou.tool.SelectImageView
        android:layout_width="168dp"
        android:layout_height="165dp"
        android:src="@mipmap/girl_h"
        app:ImageType="TYPE_ROUND"
        app:ImageRoundRadius="3dp"
        android:id="@+id/home_store_treasure_item_img"
        />

    <TextView
        android:layout_width="30dp"
        android:text="新品"
        android:textSize="11sp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/home_store_treasure_item_status"
        android:background="@drawable/home_store_followshap"
        android:layout_below="@id/home_store_treasure_item_img"
        android:layout_alignEnd="@id/home_store_treasure_item_img"
        android:layout_height="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【实拍原版】韩版BF风险是登记费"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@id/home_store_treasure_item_status"
        android:layout_alignTop="@id/home_store_treasure_item_status"
        android:textColor="#e6161616"
        android:maxLines="1"
        android:id="@+id/home_store_treasure_item_description"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        android:layout_alignStart="@id/home_store_treasure_item_description"
        android:textColor="#80000000"
        android:layout_below="@id/home_store_treasure_item_description"
        android:id="@+id/home_store_treasure_item_buyers"
        android:text="已有45人购买"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥210.00"
        android:layout_below="@id/home_store_treasure_item_buyers"
        android:layout_alignStart="@id/home_store_treasure_item_buyers"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:textColor="#fb4a89"
        android:id="@+id/home_store_treasure_item_discountPrice"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_store_treasure_item_oldPrice"
        android:layout_marginStart="7dp"
        android:textSize="12sp"
        android:textColor="#4d161616"
        android:text="￥399.00"
        android:layout_marginTop="1dp"
        android:layout_alignTop="@id/home_store_treasure_item_discountPrice"
        android:layout_toEndOf="@id/home_store_treasure_item_discountPrice"
        />
</RelativeLayout>