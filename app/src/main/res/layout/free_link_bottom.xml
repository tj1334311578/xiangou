<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:drawableTop="@mipmap/home_page"
        android:id="@+id/bottom_home" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:drawableTop="@mipmap/classification_1"
        android:gravity="center"
        android:id="@+id/bottom_classification" />

    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:src="@mipmap/nearby"
        android:id="@+id/bottom_nearby" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="购物车"
        android:drawableTop="@mipmap/classification_1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/bottom_ShoppingCart" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="我的"
        android:drawableTop="@mipmap/mine_standard"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/bottom_mine" />

</LinearLayout>