<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/nearby_store_dfimg"
        android:id="@+id/item_more_item_img"
        android:adjustViewBounds="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欧莱雅化妆品套装"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@id/item_more_item_img"
        android:layout_alignRight="@id/item_more_item_img"
        android:paddingTop="5dp"
        android:layout_alignLeft="@id/item_more_item_img"
        android:textColor="@color/black"
        android:id="@+id/item_more_item_text"
        />

</RelativeLayout>