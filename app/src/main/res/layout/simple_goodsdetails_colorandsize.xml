<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/simple_goodsdetails_colorandsize_rl"
        android:layout_height="wrap_content">

<ImageView
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="13dp"
    android:id="@+id/simple_goodsdetails_colorandsize_cancel"
    android:src="@drawable/error1"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色："
        android:textSize="14sp"
        android:textColor="#cc161616"
        android:id="@+id/simple_goodsdetails_colorandsize_color"
        android:layout_marginTop="31dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="23dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_color"
        android:layout_alignEnd="@id/simple_goodsdetails_colorandsize_cancel"
        android:layout_alignStart="@id/simple_goodsdetails_colorandsize_color"
        android:id="@+id/simple_goodsdetails_colorandsize_colorrecycle"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_colorrecycle"
        android:background="#f2f2f2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="尺码："
        android:textSize="14sp"
        android:textColor="#cc161616"
        android:layout_marginTop="21dp"
        android:layout_alignStart="@id/simple_goodsdetails_colorandsize_color"
        android:layout_marginBottom="23dp"
        android:layout_below="@id/simple_goodsdetails_colorandsize_colorrecycle"
        android:id="@+id/simple_goodsdetails_colorandsize_size"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/simple_goodsdetails_colorandsize_sizerecycle"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_size"
        android:layout_alignStart="@id/simple_goodsdetails_colorandsize_color"
        android:layout_alignEnd="@id/simple_goodsdetails_colorandsize_cancel"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_sizerecycle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="数量："
        android:textSize="14sp"
        android:textColor="#cc161616"
        android:id="@+id/simple_goodsdetails_colorandsize_number"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_sizerecycle"
        android:layout_marginTop="21dp"
        android:layout_alignStart="@id/simple_goodsdetails_colorandsize_color"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（库存量110件）"
        android:textSize="14sp"
        android:id="@+id/simple_goodsdetails_colorandsize_numbervalue"
        android:textColor="#99161616"
        android:layout_alignTop="@+id/simple_goodsdetails_colorandsize_number"
        android:layout_toEndOf="@+id/simple_goodsdetails_colorandsize_number"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/product_details_boxbg"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_number"
        android:layout_marginTop="10dp"
        android:id="@+id/simple_goodsdetails_colorandsize_numbertool_ll"
        android:layout_alignStart="@+id/simple_goodsdetails_colorandsize_number"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/product_details_delete"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:id="@+id/simple_goodsdetails_colorandsize_reduceoperand"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:background="#b9b9b9"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:id="@+id/simple_goodsdetails_colorandsize_operand"
            android:textSize="15sp"
            android:textColor="#161616"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:background="#b9b9b9"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/simple_goodsdetails_colorandsize_addoperand"
            android:src="@drawable/product_details_add"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/simple_goodsdetails_colorandsize_numbertool_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="加入购物车"
            android:textSize="14sp"
            android:background="#ffe6e8"
            android:id="@+id/simple_goodsdetails_colorandsize_addtocart"
            android:textColor="@color/textcolor_pink"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="立即购买"
            android:id="@+id/simple_goodsdetails_colorandsize_buynow"
            android:textSize="14sp"
            android:background="@color/textcolor_pink"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>