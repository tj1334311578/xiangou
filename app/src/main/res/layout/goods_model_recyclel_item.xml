<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="1dp"
    android:orientation="horizontal">
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="颜色"
        android:id="@+id/goods_model_recycle_color"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:textColor="@color/textcolor_8016"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@color/white_edf2f6"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="尺码"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:id="@+id/goods_model_recycle_size"
        android:textColor="@color/textcolor_8016"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@color/white_edf2f6"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:text="库存/件"
        android:id="@+id/goods_model_recycle_stock"
        android:textColor="@color/textcolor_8016"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@color/white_edf2f6"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:id="@+id/goods_model_recycle_delete"
        android:textColor="@color/gray"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@color/white_edf2f6"
        android:layout_height="wrap_content" />

</LinearLayout>