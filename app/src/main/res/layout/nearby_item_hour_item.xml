<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:id="@+id/item_hour_item_img"
        android:layout_marginStart="20dp"
        android:src="@mipmap/nearby_store_dfimg"/>
    <TextView
        android:id="@+id/item_hour_item_description1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hour_bg"
        android:layout_alignTop="@+id/item_hour_item_img"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:paddingLeft="8dp"
        android:gravity="center_horizontal"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="3dp"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:text="海内顶尖品质包包等你入手"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:id="@+id/item_hour_item_description2"
        android:layout_below="@id/item_hour_item_description1"
        android:layout_alignLeft="@id/item_hour_item_description1"
        android:layout_alignRight="@id/item_hour_item_description1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="稻草人女包手提包单肩斜挎包简约时尚包"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_hour_item_originalprice"
        android:layout_alignLeft="@id/item_hour_item_description2"
        android:layout_below="@id/item_hour_item_description2"
        android:textSize="13sp"
        android:text="￥289.00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_hour_item_hourprice"
        android:text="限时价"
        android:layout_alignLeft="@+id/item_hour_item_originalprice"
        android:layout_alignBottom="@+id/item_hour_item_img"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/item_hour_item_presentprice"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_hour_item_img"
        android:layout_toRightOf="@id/item_hour_item_hourprice"
        android:textSize="16sp"
        android:textColor="@color/textcolor_advs_topic_title"
        android:layout_marginStart="10dp"
        android:text="￥99.00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_hour_item_show"
        android:text="马上查看"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/hour_show"
        android:layout_alignBottom="@id/item_hour_item_img"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_alignRight="@id/item_hour_item_description1"
        />

</RelativeLayout>