<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="商品模型"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:id="@+id/goods_model_title"
        android:textColor="#e6161616"/>
    <ImageButton
        android:id="@+id/goods_model_back"
        android:layout_width="28dp"
        android:src="@drawable/error1"
        android:background="@color/white"
        android:layout_alignTop="@id/goods_model_title"
        android:layout_marginStart="15dp"
        android:layout_height="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="保存"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:id="@+id/goods_model_saved"
        android:layout_alignTop="@id/goods_model_title"
        android:textColor="#86bef2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/goods_model_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:id="@+id/goods_model_model"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_below="@+id/goods_model_back"
        android:layout_alignStart="@id/goods_model_back"
        android:text="模型："
        />
   <Spinner
       android:layout_width="105dp"
       android:id="@+id/goods_model_spinner"
       android:layout_alignTop="@id/goods_model_model"
       android:layout_toEndOf="@id/goods_model_model"
       android:layout_height="32dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:id="@+id/goods_model_color"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@id/goods_model_model"
        android:layout_toEndOf="@id/goods_model_spinner"
        android:text="颜色："
        />
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/goods_model_color_spinner"
        android:layout_alignTop="@id/goods_model_model"
        android:layout_toEndOf="@id/goods_model_color"
        android:layout_alignEnd="@id/goods_model_saved"
        android:layout_height="32dp"/>
    <TextView
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goods_model_size"
        android:layout_below="@id/goods_model_model"
        android:layout_alignStart="@id/goods_model_back"
        android:text="尺码："/>
    <GridLayout
        android:id="@+id/goods_model_gridlayout"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/goods_model_size"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_alignEnd="@id/goods_model_saved"
        android:layout_alignTop="@id/goods_model_size"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="XXS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="XS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="S"/>
        </LinearLayout>
        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="M"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_marginBottom="17dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="L"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="XL"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="XXL"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="19dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            >
            <CheckBox
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:button="@null"
                android:background="@drawable/circlebg_checkbox"
                />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="XXXL"/>
        </LinearLayout>
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="库存："
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/goods_model_back"
        android:id="@+id/goods_model_Stock"
        android:layout_below="@id/goods_model_gridlayout"
        android:textColor="@color/gray"/>
    <TableLayout
        android:layout_width="match_parent"
        android:id="@+id/goods_model_tableLayout"
        android:layout_below="@id/goods_model_gridlayout"
        android:background="#edf2f6"
        android:layout_toEndOf="@id/goods_model_Stock"
        android:layout_alignEnd="@id/goods_model_saved"
        android:collapseColumns="5"
        android:layout_alignTop="@id/goods_model_Stock"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_height="31dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:text="颜色"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="尺码"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="库存/件"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="浅蓝色"
                />
            <TextView
                android:textSize="15sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="S"
                />
            <TextView
                android:layout_weight="2"
                android:background="#c2def8"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="345"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                />
        </TableRow>
        <View android:layout_height="1dp"
            android:background="#edf5fd"
            android:layout_width="match_parent"/>

        <TableRow>
            <TextView
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="浅蓝色"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="M"
                />
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="#c2def8"
                android:text="845"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="删除"
                />
        </TableRow>
        <View android:layout_height="1dp"
            android:background="#edf5fd"
            android:layout_width="match_parent"/>
        <TableRow>
            <TextView
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="浅蓝色"
                />
            <TextView
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:text="L"
                />
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:text="845"
                android:layout_height="match_parent"
                android:background="#c2def8"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="删除"
                />
        </TableRow>
        <View android:layout_height="1dp"
            android:background="#edf5fd"
            android:layout_width="match_parent"/>

        <TableRow>
            <TextView
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="浅蓝色"
                android:textSize="15sp"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="XL"
                />
            <TextView
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_height="match_parent"
                android:background="#c2def8"
                android:text="845"
                />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="删除"
                />
        </TableRow>

    </TableLayout>

</RelativeLayout>