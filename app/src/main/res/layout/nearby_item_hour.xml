<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="限时优惠"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/hour_bg"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_hour"
        android:textColor="@color/textcolor_advs_topic_title"/>
    <View
        android:layout_width="5dp"
        android:background="@color/textcolor_advs_topic_title"
        android:id="@+id/hour_bg"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="1dp"
        android:layout_alignBottom="@id/item_hour"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textSize="18sp"
        android:text="00"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@id/item_hour"
        android:textColor="@color/white"
        android:id="@+id/item_hour_min"
        android:layout_toRightOf="@+id/item_hour_hour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textSize="18sp"
        android:text="48"
        android:textColor="@color/white"
        android:id="@+id/item_hour_hour"
        android:layout_alignBaseline="@+id/item_hour"
        android:layout_alignBottom="@+id/item_hour"
        android:layout_toEndOf="@+id/item_hour"
        android:layout_marginStart="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textSize="18sp"
        android:text="00"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@id/item_hour"
        android:textColor="@color/white"
        android:id="@+id/item_hour_sec"
        android:layout_toRightOf="@id/item_hour_min"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_alignTop="@id/item_hour"
        android:textSize="20sp"
        android:layout_toRightOf="@id/item_hour_hour"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_alignTop="@id/item_hour"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_toRightOf="@id/item_hour_min"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/item_hour_next"
        android:layout_alignBottom="@+id/item_hour"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="下一场开抢的时间为 9:00"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/item_hour_recycleView"
        android:layout_below="@id/item_hour"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>