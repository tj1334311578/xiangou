<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content"
    android:background="@color/whiteBgColor">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="限时优惠"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/hour_bg"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_hour"
        android:textColor="@color/textcolor_pink"/>
    <View
        android:layout_width="2dp"
        android:background="@color/textcolor_pink"
        android:id="@+id/hour_bg"
        android:layout_marginLeft="1dp"
        android:layout_alignTop="@id/item_hour"
        android:layout_alignBottom="@id/item_hour"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/item_hour_hour"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/item_hour"
        android:layout_alignBottom="@+id/item_hour"
        android:layout_toEndOf="@+id/item_hour"
        />
    <TextView
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/item_hour"
        android:layout_alignBottom="@id/item_hour"
        android:textColor="@color/whiteBgColor"
        android:id="@+id/item_hour_min"
        android:layout_toRightOf="@+id/item_hour_hour"/>


    <TextView
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/item_hour"
        android:layout_alignBottom="@id/item_hour"
        android:textColor="@color/white"
        android:id="@+id/item_hour_sec"
        android:layout_toRightOf="@id/item_hour_min"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_alignTop="@id/item_hour"
        android:textSize="14sp"
        android:layout_toRightOf="@id/item_hour_hour"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_alignTop="@id/item_hour"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_toRightOf="@id/item_hour_min"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:id="@+id/item_hour_next"
        android:layout_alignBottom="@+id/item_hour"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:text="下一场开抢的时间为 9:00"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/item_hour_recycleView"
        android:layout_below="@id/item_hour"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</RelativeLayout>