<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/good_management_head"
    android:id="@+id/goods_management_page_head"
    />

    <!--添加搜索功能控件-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/goods_management_page_head"
        android:layout_height="match_parent"
        android:layout_above="@+id/goods_management_page_addBtn"
        android:id="@+id/goods_management_page_recycle"
        ></android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_e7"
        android:layout_below="@+id/goods_management_page_recycle"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="添加商品"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:id="@+id/goods_management_page_addBtn"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius5dp"
        />
</RelativeLayout>