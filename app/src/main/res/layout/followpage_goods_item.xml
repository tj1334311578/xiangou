<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="13dp"
    android:paddingEnd="13dp"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_centerVertical="true"
        android:layout_width="19dp"
        android:layout_height="20dp"
        android:button="@null"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        android:id="@+id/follow_goods_item_checkbox"
        android:background="@drawable/circlebg_checkbox"/>
    <ImageView
        android:layout_width="99dp"
        android:src="@mipmap/girl_h"
        android:scaleType="fitXY"
        android:id="@+id/follow_goods_item_img"
        android:layout_height="83dp"
        android:layout_toRightOf="@id/follow_goods_item_checkbox"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:textColor="#e6161616"
        android:id="@+id/follow_goods_item_description"
        android:layout_toEndOf="@id/follow_goods_item_img"
        android:text="烧开后十分难受藕粉司机粉丝颂佛是减肥节食哦非搜索就是大放送分红 是粉红色佛"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="￥179.10"
        android:textColor="@color/color_pink_fb4a89"
        android:textSize="14sp"
        android:id="@+id/follow_goods_item_newprice"
        android:layout_below="@id/follow_goods_item_description"
        android:layout_alignStart="@id/follow_goods_item_description"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="￥284.29"
        android:gravity="center"
        android:layout_toEndOf="@id/follow_goods_item_newprice"
        android:id="@+id/follow_goods_item_oldprice"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@id/follow_goods_item_newprice"
        android:layout_alignBottom="@id/follow_goods_item_newprice"
        android:textColor="#80161616"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="券"
        android:paddingStart="2dp"
        android:gravity="center"
        android:paddingEnd="2dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:background="@drawable/voucher_bg"
        android:layout_marginStart="5dp"
        android:textColor="@color/whiteBgColor"
        android:id="@+id/follow_goods_item_voucher"
        android:layout_toEndOf="@id/follow_goods_item_oldprice"
        android:layout_alignTop="@id/follow_goods_item_newprice"
        android:layout_alignBottom="@id/follow_goods_item_newprice"
        />
</RelativeLayout>