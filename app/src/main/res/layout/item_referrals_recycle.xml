<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#33123456"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="4dp"
              android:paddingBottom="6dp"
    >

    <com.example.administrator.xiangou.tool.CustomImageView
        android:id="@+id/civ_item_referrals_recycle"
        app:civ_type="TYPE_ROUND"
        app:civ_roundradius="4"
        android:scaleType="fitXY"
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_item_referrals_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/textcolor_blackf506"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>