<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="6dp"
        android:id="@+id/icon_child_nearbygoods"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_child_nearbygoods"
        android:layout_marginLeft="3dp"
        android:textSize="14sp"
        android:textColor="@color/textcolor_nearby_title"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/describe_child_nearby"
        android:textSize="11sp"
        android:textColor="@color/textcolor_nearby_hint"/>
    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginRight="21dp"
        android:src="@mipmap/nearby_goods_entrance_icon"
        android:id="@+id/img_child_nearbygoods"/>
</LinearLayout>