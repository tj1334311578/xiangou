<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="25dp">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/look_store_nearby_tv"
        android:drawableLeft="@mipmap/nearby_store_look_icon"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:textColor="@color/textcolor_nearby_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/nearby_store_like_icon"
        android:drawablePadding="5dp"
        android:id="@+id/like_child_store_nearby"
        android:textSize="12sp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/nearby_store_attention_icon"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:id="@+id/attention_child_store_nearby"/>
</LinearLayout>