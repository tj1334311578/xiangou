<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.xiangou">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".tool.ContextUtils"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.login.DynamicActivity" />
        <activity android:name=".main.login.FindpswActivity" />
        <activity android:name=".main.login.MainLoginActivity" />
        <activity android:name=".main.login.MainRegisterActivity" />
        <activity android:name=".main.login.MainRegisterTwoActivity" />
        <activity android:name=".main.login.FindonepagerActivity"/>
        <activity android:name=".main.login.FindtwopagerActivity"/>
        <activity android:name=".main.login.FindthreepagerActivity"/>
        <activity android:name=".mine.store_application.StoreApplicationActivity"/>
    </application>

</manifest>