<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/nearby_dayitem_rl"
    >
    <ImageView
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:src="@mipmap/nearby_store_dfimg"
        android:id="@+id/item_day_item_img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cart_text16color"
        android:textSize="12sp"
        android:lines="1"
        android:id="@+id/item_day_item_description"
        android:layout_below="@id/item_day_item_img"
        android:layout_alignRight="@+id/item_day_item_img"
        android:layout_alignLeft="@id/item_day_item_img"
        android:ellipsize="end"
        android:layout_marginTop="9dp"
        android:text="新款韩版时尚潮流" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥69.00"
        android:layout_marginTop="8dp"
        android:id="@+id/item_day_item_presentprice"
        android:textSize="12sp"
        android:textColor="@color/textcolor_pink"
        android:layout_below="@id/item_day_item_description"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥169.00"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@id/item_day_item_presentprice"
        android:id="@+id/item_day_item_originalprice"
        android:layout_toRightOf="@id/item_day_item_presentprice"/>

</RelativeLayout>