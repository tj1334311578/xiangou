<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:background="@drawable/home_store_followshap"
    android:padding="1dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/home_store_coupon_Rl"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/home_store_coupon_discountPrice"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="￥"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_toEndOf="@id/home_store_coupon_discountPrice"
            android:layout_alignTop="@id/home_store_coupon_discountPrice"
            android:id="@+id/home_store_currentent"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="15sp"
       android:id="@+id/home_store_description"
       android:layout_below="@id/home_store_coupon_Rl"
       android:gravity="center"
       android:textColor="@color/white"
       android:text="满99元立减"/>
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_width="10dp"
        android:layout_margin="1dp"
        android:background="@drawable/white_circle"
        android:layout_height="10dp" />
</RelativeLayout>