<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <!--完成-->
    <com.example.administrator.xiangou.tool.SelectImageView
        android:layout_width="168dp"
        android:layout_height="165dp"
        android:src="@mipmap/girl_v"
        app:ImageType="TYPE_ROUND"
        app:ImageRoundRadius="3dp"
        android:scaleType="fitXY"
        android:id="@+id/home_store_treasure_item_img"
        />
    <LinearLayout
        android:id="@+id/home_store_treasure_item_Ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_below="@id/home_store_treasure_item_img"
        android:layout_alignEnd="@+id/home_store_treasure_item_img"
        android:layout_marginTop="9dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【实拍原版】韩版BF风险是登记费"
            android:textSize="14sp"
            android:textColor="#e6161616"
            android:maxLines="1"
            android:id="@+id/home_store_treasure_item_description"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="30dp"
            android:text="新品"
            android:textSize="11sp"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/home_store_treasure_item_status"
            android:background="@drawable/home_store_followshap"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="5dp"
        android:layout_alignStart="@id/home_store_treasure_item_Ll"
        android:textColor="#80000000"
        android:layout_below="@id/home_store_treasure_item_Ll"
        android:id="@+id/home_store_treasure_item_buyers"
        android:text="已有45人购买"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥210.00"
        android:layout_below="@id/home_store_treasure_item_buyers"
        android:layout_alignStart="@id/home_store_treasure_item_buyers"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        android:textColor="#fb4a89"
        android:id="@+id/home_store_treasure_item_discountPrice"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_store_treasure_item_oldPrice"
        android:layout_marginStart="7dp"
        android:textSize="12sp"
        android:textColor="#4d161616"
        android:text="￥399.00"
        android:layout_marginTop="1dp"
        android:layout_alignTop="@id/home_store_treasure_item_discountPrice"
        android:layout_toEndOf="@id/home_store_treasure_item_discountPrice"
        />
</RelativeLayout>