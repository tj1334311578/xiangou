<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="41dp"
        android:adjustViewBounds="true"
        android:id="@+id/pull_position_back"
        android:layout_marginStart="13dp"
        android:src="@drawable/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="个人信息"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="#161616"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:id="@+id/pull_position_rl"
        android:foregroundGravity="center_vertical"
        android:layout_alignStart="@id/pull_position_back"
        android:layout_below="@id/pull_position_back"
        android:layout_marginEnd="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人头像"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#161616"/>
        <com.example.administrator.xiangou.tool.CustomImageView
            app:civ_type="TYPE_CIRCLE"
            android:layout_width="45dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/pull_position_imageButton"
            android:src="@drawable/girl_v"
            android:layout_marginEnd="15dp"
            android:layout_height="45dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/show_right"
            android:id="@+id/pull_position_imageButton" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:id="@+id/pull_position_name"
        android:foregroundGravity="center_vertical"
        android:layout_alignStart="@id/pull_position_back"
        android:layout_below="@id/pull_position_rl"
        android:layout_marginEnd="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#161616"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="闲购粑粑和麻麻"
           android:layout_centerVertical="true"
           android:layout_marginEnd="15dp"
           android:layout_toStartOf="@+id/pull_position_name_imageButton"
           />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/show_right"
            android:id="@+id/pull_position_name_imageButton" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:id="@+id/pull_position_sex"
        android:foregroundGravity="center_vertical"
        android:layout_alignStart="@id/pull_position_back"
        android:layout_below="@id/pull_position_name"
        android:layout_marginEnd="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#161616"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/pull_position_sex_imageButton"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/show_right"
            android:id="@+id/pull_position_sex_imageButton" />
    </RelativeLayout>
</RelativeLayout>