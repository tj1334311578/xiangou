<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/simple_goodsdetails_coupon_dialog_ll"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺优惠券"
            android:textSize="15sp"
            android:layout_alignTop="@+id/simple_goodsdetails_coupon_dialog_cancel"
            android:layout_alignBottom="@+id/simple_goodsdetails_coupon_dialog_cancel"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#cc161616"
            />
        <ImageButton
            android:id="@+id/simple_goodsdetails_coupon_dialog_cancel"
            android:layout_width="28dp"
            android:src="@drawable/error1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:background="#00000000"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_height="28dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/simple_goodsdetails_coupon_dialog_cancel"
            android:background="#f2f2f2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可领优惠券"
            android:layout_marginTop="1dp"
            android:paddingTop="13dp"
            android:layout_marginStart="15dp"
            android:paddingBottom="13dp"
            android:textSize="14sp"
            android:id="@+id/simple_goodsdetails_coupon_dialog_receiveCoupon"
            android:layout_below="@+id/simple_goodsdetails_coupon_dialog_cancel"
            android:textColor="#cc161616"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_below="@+id/simple_goodsdetails_coupon_dialog_receiveCoupon"
            android:id="@+id/simple_goodsdetails_coupon_dialog_recycle"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        
    </RelativeLayout>

</RelativeLayout>