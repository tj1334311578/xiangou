<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/girl_h"
    android:id="@+id/home_store_head_background"
    android:layout_height="110dp">
    <LinearLayout
        android:id="@+id/home_store_head_searchLl"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="205dp"
        android:layout_height="28dp">
<ImageView
    android:layout_width="14dp"
    android:id="@+id/home_store_head_startSearch"
    android:layout_height="14dp"
    android:layout_gravity="center"
    android:src="@mipmap/search"/>
        <EditText
            android:id="@+id/home_store_head_searchEdit"
            android:layout_width="match_parent"
            android:hint="清新可爱校园装"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            android:padding="0dp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:id="@+id/home_store_head_Return"
        android:layout_alignTop="@id/home_store_head_searchLl"
        android:layout_marginStart="13dp"
        android:src="@mipmap/return_icon"/>
    <RelativeLayout
        android:id="@+id/home_store_head_topbar_Rl"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/information"
            android:clickable="true"
            android:id="@+id/home_store_head_news_topbar_iv"/>
        <TextView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/news_num"
            android:text="3"
            android:textSize="11sp"
            android:textColor="@color/whiteBgColor"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/home_store_head_news_num_topbar_tv"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.example.administrator.xiangou.tool.SelectImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home_store_head_storeImage"
        android:src="@mipmap/girl_v"
        android:layout_below="@id/home_store_head_searchLl"
        android:layout_alignStart="@id/home_store_head_Return"
        app:ImageType="TYPE_ROUND"
        android:layout_marginTop="13dp"
        app:ImageRoundRadius="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="bottom"
        android:layout_marginStart="6dp"
        android:id="@+id/home_store_headStoreName"
        android:text="迷失的小羔羊"
        android:textSize="14sp"
        android:layout_alignTop="@id/home_store_head_storeImage"
        android:layout_toEndOf="@id/home_store_head_storeImage"
        android:textColor="#fff"/>
    <RatingBar
        android:layout_centerVertical="true"
        android:layout_below="@+id/home_store_headStoreName"
        android:padding="-3dp"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="2.5"
        android:foregroundGravity="top"
        android:progressDrawable="@drawable/rating_yellow"
        android:progressBackgroundTint="@color/white"
        android:numStars="5"
        android:id="@+id/home_store_ratingbar"
        android:layout_alignStart="@+id/home_store_headStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.administrator.xiangou.tool.SelectImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/home_store_head_mapLocation"
        android:layout_toEndOf="@id/home_store_headStoreName"
        android:layout_alignTop="@id/home_store_headStoreName"
        android:layout_marginStart="6dp"
        android:src="@drawable/girl_v"
        app:ImageType="TYPE_CIRCLE"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销量3452"
        android:textSize="11sp"
        android:id="@+id/home_store_head_salesVolume"
        android:textColor="@color/white"
        android:layout_below="@+id/home_store_ratingbar"
        android:layout_alignStart="@id/home_store_headStoreName"/>

    <View
        android:layout_width="1dp"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="0.5dp"
        android:id="@+id/home_store_head_line"
        android:layout_toEndOf="@id/home_store_head_salesVolume"
        android:layout_alignTop="@id/home_store_head_salesVolume"
        android:layout_height="11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注5634"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:layout_alignTop="@id/home_store_head_salesVolume"
        android:layout_toEndOf="@id/home_store_head_line"
        android:id="@+id/home_store_head_follow"/>
        <com.example.administrator.xiangou.tool.DrawableTextView
            android:layout_width="55dp"
            android:layout_height="21dp"
            android:text="关注"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="3dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:id="@+id/home_store_head_showStore"
            android:layout_alignBottom="@id/home_store_head_storeImage"
            android:layout_alignEnd="@id/home_store_head_topbar_Rl"
            android:background="@drawable/home_store_followshap"
            app:leftDrawable="@mipmap/personal_attention_icon"
            app:leftDrawableHeight="16dp"
            app:leftDrawableWidth="16dp"/>
</RelativeLayout>