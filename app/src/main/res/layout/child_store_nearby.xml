<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/whiteBgColor">


    <include layout="@layout/nearby_store_child_title"
        android:id="@+id/title_nearby_store_child"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="8dp">
        <com.example.administrator.xiangou.tool.CustomImageView
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:id="@+id/img1_child_store_nearby"/>
        <com.example.administrator.xiangou.tool.CustomImageView
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/img2_child_store_nearby"/>
        <com.example.administrator.xiangou.tool.CustomImageView
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/img3_child_store_nearby"/>
    </LinearLayout>
    <include layout="@layout/nearby_store_child_foot"
             android:id="@+id/foot_nearby_store_child"/>
</LinearLayout>