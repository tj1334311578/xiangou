<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/toastbg"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_title_bg"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="6dp"
        android:id="@+id/title_toast_tv"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_toast_ll"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >

        <com.example.administrator.xiangou.tool.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:civ_type="TYPE_ROUND"
            app:civ_roundradius="6"
            android:scaleType="matrix"
            android:layout_margin="6dp"
            android:background="@mipmap/icon_app"
            android:id="@+id/icon_content_toast_civ"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/text_content_toast_tv"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="积极考虑"
            android:textSize="14sp"
            android:textColor="@color/whiteBgColor"
            />
    </LinearLayout>
</LinearLayout>