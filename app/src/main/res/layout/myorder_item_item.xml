<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:src="@drawable/girl_v"
        android:scaleType="fitXY"
        android:id="@+id/myorder_item_item_img"
        android:layout_height="60dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥179.10"
        android:textSize="14sp"
        android:textColor="#e6161616"
        android:layout_alignParentEnd="true"
        android:id="@+id/myorder_item_item_price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80161616"
        android:text="￥179.10"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/myorder_item_item_price"
        android:id="@+id/myorder_item_item_oldprice"/>
    <TextView
        android:layout_width="match_parent"
        android:text="苏蹦出安吉新款文艺吸纳搜小礼堂纯棉套头fejfijenfjefieifjefifiehnf白色常修村山"
        android:textColor="#e6161616"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:id="@+id/myorder_item_item_description"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/myorder_item_item_price"
        android:lines="2"
        android:layout_toEndOf="@id/myorder_item_item_img"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/myorder_item_item_color"
        android:text="颜色：白色+灰色"
        android:textSize="12sp"
        android:textColor="#80161616"
        android:layout_alignStart="@id/myorder_item_item_description"
        android:layout_alignEnd="@id/myorder_item_item_description"
        android:layout_below="@id/myorder_item_item_description"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="尺寸：S"
        android:textSize="12sp"
        android:textColor="#80161616"
        android:layout_alignStart="@id/myorder_item_item_description"
        android:layout_alignEnd="@id/myorder_item_item_description"
        android:layout_below="@id/myorder_item_item_color"
        android:id="@+id/myorder_item_item_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/myorder_item_item_price"
        android:layout_below="@id/myorder_item_item_oldprice"
        android:text="x1"
        android:textSize="12sp"
        android:textColor="#80161616"
        android:id="@+id/myorder_item_item_acount"/>

</RelativeLayout>