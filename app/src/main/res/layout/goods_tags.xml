<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    android:text="商品标签"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:layout_centerHorizontal="true"
    android:textSize="18sp"
    android:layout_marginBottom="10dp"
    android:id="@+id/goods_tags_title"
    android:textColor="#e6161616"/>
    <ImageButton
        android:id="@+id/goods_tags_back"
        android:layout_width="28dp"
        android:src="@drawable/error1"
        android:background="@color/white"
        android:layout_alignTop="@id/goods_tags_title"
        android:layout_marginStart="15dp"
        android:layout_height="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="保存"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:id="@+id/goods_tags_saved"
        android:layout_alignTop="@id/goods_tags_title"
        android:textColor="#86bef2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/goods_tags_title"
        android:background="@color/register_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/goods_tags_tv"
        android:text="(最多选择5项)"
        android:textSize="14sp"
        android:textColor="#806a747e"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_alignStart="@id/goods_tags_back"
        android:layout_alignEnd="@id/goods_tags_saved"
        android:layout_below="@id/goods_tags_title"
        android:layout_marginBottom="10dp"
        android:layout_height="16dp" />
    <com.zhy.view.flowlayout.TagFlowLayout
        android:layout_width="match_parent"
        android:id="@+id/goods_tags_tagflowlayout"
        android:paddingStart="15dp"
        app:max_select="5"
        app:auto_select_effect="true"
        android:layout_below="@id/goods_tags_tv"
        android:layout_height="match_parent">
    </com.zhy.view.flowlayout.TagFlowLayout>
</RelativeLayout>