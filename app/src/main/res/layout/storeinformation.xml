<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:text="店铺信息"
    android:textSize="18sp"
    android:textColor="#e6161616"
    android:id="@+id/storeinformation_showInformation"
    android:gravity="center"
    android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/return_icon"
        android:layout_marginStart="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfe8ee"
        android:layout_below="@id/storeinformation_showInformation"
        />
    <com.example.administrator.xiangou.tool.SelectImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:ImageType="TYPE_ROUND"
        app:ImageRoundRadius="5dp"
        android:id="@+id/storeinformation_showStoreImg"
        android:layout_below="@id/storeinformation_showInformation"
        android:layout_marginTop="23dp"
        android:layout_marginStart="105dp"
        android:src="@mipmap/girl_v"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="迷失的小羔羊"
        android:id="@+id/storeinformation_showStoreName"
        android:layout_alignTop="@id/storeinformation_showStoreImg"
        android:layout_toEndOf="@id/storeinformation_showStoreImg"
        android:layout_marginStart="9dp"
        android:gravity="center_horizontal|bottom"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="创建于2016年06月"
        android:textSize="12sp"
        android:gravity="center_horizontal|top"
        android:layout_below="@id/storeinformation_showStoreName"
        android:layout_toEndOf="@id/storeinformation_showStoreImg"
        android:layout_alignStart="@id/storeinformation_showStoreName"
        android:layout_alignEnd="@id/storeinformation_showStoreName"
        android:layout_height="25dp" />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/storeinformation_showSaleVolume"
        android:gravity="end"
        android:paddingEnd="15dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/storeinformation_showStoreImg"
        android:text="销量：3452"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/storeinformation_showFollow"
        android:gravity="start"
        android:paddingStart="15dp"
        android:layout_alignTop="@id/storeinformation_showSaleVolume"
        android:layout_toEndOf="@id/storeinformation_showSaleVolume"
        android:text="关注：5634"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#f2f2f2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/storeinformation_showSaleVolume"
        />
  <LinearLayout
      android:layout_below="@id/storeinformation_showSaleVolume"
      android:layout_marginTop="50dp"
      android:layout_width="wrap_content"
      android:layout_alignStart="@id/storeinformation_showStoreImg"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      android:id="@+id/storeinformation_storeLevel_ll"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="店铺等级"
          android:textSize="12sp"
          android:textColor="#cc161616"
          android:id="@+id/storeinformation_storeLevel"/>
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:paddingStart="4dp"
          android:src="@mipmap/girl_h"/>
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:paddingStart="4dp"
          android:src="@mipmap/girl_h"/>
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:paddingStart="4dp"
          android:src="@mipmap/girl_h"/>
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:paddingStart="4dp"
          android:src="@mipmap/girl_h"/>
      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:paddingStart="4dp"
          android:src="@mipmap/girl_h"/>
  </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:textSize="12sp"
    android:textColor="#cc161616"
    android:layout_below="@id/storeinformation_storeLevel_ll"
    android:text="服务电话：012-8584888"
    android:layout_alignStart="@id/storeinformation_showStoreImg"
    android:id="@+id/storeinformation_serviceCall"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#cc161616"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/storeinformation_serviceCall"
        android:layout_alignStart="@id/storeinformation_showStoreImg"
        android:layout_alignEnd="@id/storeinformation_showStoreName"
        android:id="@+id/storeinformation_showStoreAddress"
        android:text="店铺地址：反正在地球上，管他在太平洋还是大西洋"
        />
    <View
        android:layout_width="83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#7f7f7f"
        android:layout_below="@id/storeinformation_showStoreAddress"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二维码名牌"
        android:layout_below="@id/storeinformation_showStoreAddress"
        android:layout_marginTop="43dp"
        android:textSize="12sp"
        android:id="@+id/storeinformation_showStoreQRCode_tv"
        android:textColor="#cc161616"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="175dp"
        android:src="@mipmap/girl_v"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:id="@+id/storeinformation_showStoreQRCode"
        android:layout_below="@id/storeinformation_showStoreQRCode_tv"
        android:layout_height="175dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#cc161616"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/storeinformation_showStoreQRCode"
    android:text="用手机闲购扫一扫"/>
</RelativeLayout>