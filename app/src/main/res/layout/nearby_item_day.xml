<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日优惠"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:id="@+id/item_day"
        android:layout_toRightOf="@+id/day_bg"
        android:textColor="@color/textcolor_advs_topic_title"/>
    <View
        android:layout_width="5dp"
        android:background="@color/textcolor_advs_topic_title"
        android:id="@+id/day_bg"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/item_day"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_day"
        android:layout_alignBottom="@+id/item_day"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:text="小编特别推荐" />
    <android.support.v7.widget.RecyclerView
        android:focusable="false"
        android:layout_width="match_parent"
        android:id="@+id/item_day_recycle"
        android:layout_below="@+id/item_day"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>