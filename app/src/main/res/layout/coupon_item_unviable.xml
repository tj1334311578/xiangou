<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:dash="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
<TextView
    android:layout_marginTop="8dp"
    android:layout_marginStart="10dp"
    android:layout_width="match_parent"
    android:textSize="14sp"
    android:id="@+id/coupon_item_unviable_style"
    android:textColor="#999999"
    android:layout_height="wrap_content"
    android:text="全场券 • 闲购专用"/>
    <com.example.administrator.xiangou.tool.DashedLine
        android:layout_width= "match_parent"
        android:layout_height= "1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        dash:lineColor= "#999999"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#999999"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:id="@+id/coupon_item_unviable_discount"
            android:textSize="35sp"
            android:textColor="#999999"
            android:gravity="center"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="[满199元可用]"
            android:id="@+id/coupon_item_unviable_condition"
            android:layout_marginStart="11dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="#999999"/>
        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@mipmap/discount_coupon_out_of_date_img"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="2017.01.01～2017.06.01"
        android:textSize="14sp"
        android:textColor="#80161616"
        android:id="@+id/coupon_item_unviable_effectivedate" />
    </LinearLayout>
    </RelativeLayout>