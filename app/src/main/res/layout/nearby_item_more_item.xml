<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whiteBgColor"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:paddingBottom="5dp"
                android:id="@+id/nearby_moreitem_rl"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:src="@mipmap/nearby_store_dfimg"
        android:id="@+id/item_more_item_img"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺推荐"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@id/item_more_item_img"
        android:layout_alignRight="@id/item_more_item_img"
        android:paddingTop="9dp"
        android:layout_alignLeft="@id/item_more_item_img"
        android:textColor="@color/textcolor_nearby_item_name"
        android:textSize="12sp"
        android:id="@+id/item_more_item_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_present_price_tv"
        android:textSize="12sp"
        android:textColor="@color/color_pink_fb4a89"
        android:layout_below="@id/item_more_item_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_old_price_tv"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/cart_textb316color"
        android:layout_toRightOf="@id/item_present_price_tv"
        android:layout_alignBottom="@id/item_present_price_tv"
        />

</RelativeLayout>